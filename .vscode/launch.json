{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: YAPMO (DevContainer)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/app"
            },
            "justMyCode": true,
            "stopOnEntry": true,
            "python": "python",
            "subProcess": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/app"
        }
    ]
}
